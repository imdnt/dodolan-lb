{
  "name": "Product",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "name": {
      "type": "string",
      "required": true
    },
    "sku": {
      "type": "string"
    },
    "qty": {
      "type": "number",
      "default": 0
    },
    "weight": {
      "type": "number",
      "default": 0
    },
    "weightType": {
      "type": "string",
      "default": "KG"
    },
    "variant": {
      "type": "string"
    },
    "price": {
      "type": "number",
      "default": 0
    },
    "images": {
      "type": [
        "string"
      ]
    },
    "condition": {
      "type": "boolean",
      "default": true
    },
    "description": {
      "type": "string"
    },
    "disabled": {
      "type": "boolean",
      "default": false
    },
    "pinned": {
      "type": "boolean",
      "default": true
    },
    "qtySold": {
      "type": "number",
      "default": 0
    },
    "active": {
      "type": "boolean",
      "default": true
    }
  },
  "validations": [],
  "relations": {
    "orders": {
      "type": "hasMany",
      "model": "Order",
      "foreignKey": "",
      "options": {
        "nestRemoting": true
      }
    },
    "blProducts": {
      "type": "hasOne",
      "model": "blProduct",
      "foreignKey": "",
      "options": {
        "nestRemoting": true
      }
    },
    "tokpedProducts": {
      "type": "hasOne",
      "model": "tokpedProduct",
      "foreignKey": "",
      "options": {
        "nestRemoting": true
      }
    }
  },
  "acls": [],
  "methods": {
    "upload": {
      "accepts": [
        {
          "arg": "id",
          "type": "string",
          "required": true
        },
        {
          "arg": "req",
          "type": "object",
          "http": {
            "source": "req"
          }
        },
        {
          "arg": "res",
          "type": "object",
          "http": {
            "source": "res"
          }
        }
      ],
      "returns": {
        "arg": "result",
        "root": true,
        "type": "Object"
      },
      "http": {
        "verb": "post",
        "path": "/:id/upload"
      }
    },
    "getMyItem": {
      "accepts": [
        {
          "arg": "req",
          "type": "object",
          "http": {
            "source": "req"
          }
        },
        {
          "arg": "res",
          "type": "object",
          "http": {
            "source": "res"
          }
        }
      ],
      "returns": {
        "arg": "result",
        "root": true,
        "type": "Object"
      },
      "http": {
        "verb": "get",
        "path": "/getMyItem"
      }
    }
  }
}
